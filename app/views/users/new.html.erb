<%= provide(:title, "Sign up") %>

<div class="container">
  <div class="formbox">
    <h3>Create an Account</h3>
    <br></br>

    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-small" %>
    <% end %>
  </div>
</div>